@page
@model WebApplication1.Pages.Account.NewModel
@{
	ViewData["Title"] = "New";
}

<h2>New</h2>

<form method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="Input.Email"></label>
		<input asp-for="Input.Email" class="form-control" />
		<span asp-validation-for="Input.Email"></span>
	</div>
	<div class="form-group">
		<label asp-for="Input.Password"></label>
		<input asp-for="Input.Password" class="form-control" />
		<span asp-validation-for="Input.Password"></span>
	</div>
	@foreach (var item in Model.Input.Claims)
	{
		var index = Model.Input.Claims.IndexOf(item);
		<div class="form-group">
			<label asp-for="Input.Claims[index].Type"></label>
			<input asp-for="Input.Claims[index].Type" class="form-control" />
			<span asp-validation-for="Input.Claims[index].Type"></span>
		</div>
		<div class="form-group">
			<label asp-for="Input.Claims[index].Value"></label>
			<input asp-for="Input.Claims[index].Value" class="form-control" />
			<span asp-validation-for="Input.Claims[index].Value"></span>
		</div>
	}
	<div class="form-group">
		<button type="submit" asp-page-handler="AddCliam" role="button" class="btn btn-warning">Add Cliam</button>
	</div>
	<div class="form-group">
		<button type="submit" role="button" asp-page="./New" class="btn btn-warning">Submit</button>
	</div>
</form>